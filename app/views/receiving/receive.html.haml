%h2.text-center.display-4 SKU Search
.row
  .col-md-8.offset-md-2
    %form{:action => "#"}
      .input-group
        %input.form-control.form-control-lg{:placeholder => "Type your keywords here", :type => "search", data: {}}
        .input-group-append
          %button.btn.btn-lg.btn-default{:type => "submit", data: { controller: 'receive', action: 'click->receive#search'}}
            %i.fa.fa-search

