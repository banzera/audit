-# Navbar
%nav.main-header.navbar.navbar-expand.navbar-dark
  -# Left navbar links
  %ul.navbar-nav
    = nav_link_to fa_icon('bars'), '#', role: :button, data: {widget: :pushmenu, 'auto-collapse-size': 1200, 'enable-remember': true }
    = render partial: 'layouts/nav/menu_receiving'
    = render partial: 'layouts/nav/menu_shipping'
    = render partial: 'layouts/nav/menu_sku_issues'
    = render partial: 'layouts/nav/menu_billing'
    = render partial: 'layouts/nav/menu_analysis'
    = render partial: 'layouts/nav/menu_analysis'
    = nav_dropdown 'Inventory' do
      = nav_link_to fa_icon('download', text: 'Export'), inventory_path(format: :xlsx)

  -# Right navbar links
  %ul.navbar-nav.ml-auto
    -#= render partial: 'layouts/nav/search'
    -#= render partial: 'layouts/nav/messages'
    -#= render partial: 'layouts/nav/notifications'
    = render partial: 'layouts/nav/user'

    = nav_dropdown(fa_icon('cog'), right: true) do
      = nav_link_to fa_icon('database', text: 'Export Tables'), export_dashboard_index_path, data: { remote: true, method: :post, confirm: 'Really export the tables?'}
      = nav_divider
      = nav_link_to fa_icon('key', text: 'Application Logs'), effective_logging.admin_logs_path
      = nav_divider
      = nav_link_to fa_icon('key', text: 'Blazer Dashboard'), blazer.root_path

    = nav_link_to fa_icon('expand-arrows-alt'), '#', 'data-widget': :fullscreen, role: :button
    = nav_link_to fa_icon('adjust'), '#', id: 'dark-mode-toggle', data: {slide: true, widget: "control-sidebar"}, role: :button
