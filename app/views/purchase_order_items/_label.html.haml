%table.table.table-borderless.m-0
  %tr
    %td.p-1(colspan=2)
      = Barby::Code39.new(@sku.skuid.to_s).to_svg(margin: 0, height: 80, xdim: 4).html_safe
    %td.p-1
      %h1.display-3=@sku.skuid
    %td
  %tr
    %td.p-1(colspan=2)
      %span.lead MANF: #{@sku.manf}
      %br
      %span.lead ITEM: #{@sku.itemno}
      %br
    %td.p-1.float-right
      %dl
        %dt Max: #{@sku.skumaxtemp}
        %dt Min: #{@sku.skumintemp}
    %td
  %tr
    %td.p-0(colspan=4)
      %span.lead
        %b=@sku.skudesc

  %tr
    %td.p-0.align-bottom
      %img{:height => '60px', :alt => "AUDIT Logo", :src => "/img/logo_black.png"}
    %td.p-1.align-bottom
      %h1.display-5=@purchase_order.poid
    %td.p-1.align-bottom(colspan=2)
      = Barby::Code39.new(@purchase_order.poid.to_s).to_svg(margin: 0, height: 60, xdim: 3).html_safe
  %tr
    %td.p-0
    %td.p-0(colspan=2)
      =@purchase_order.pobatch
