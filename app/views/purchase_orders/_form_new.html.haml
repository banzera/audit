.content
  = simple_form_for @purchase_order, html: {novalidate: true}, defaults: { disabled: local_assigns[:readonly], wrapper: :vertical_form } do |f|
    .row
      .col-12
        = render partial: 'general_tab', locals: { f: f }

    - unless local_assigns[:readonly]
      .row
        = simple_form_submit(f)
