.content
  = simple_form_for @resource, defaults: { disabled: local_assigns[:readonly] }, wrapper: :horizontal_form do |f|
    .row
      .col-lg-10
        .card.card-primary.card-outline
          .card-header
            %h3.card-title General
            .card-tools
              .button.btn.btn-tool{type: :button, 'data-card-widget': :collapse, title: :collapse}
                %i.fas.fa-minus
          .card-body
            %p.card-text
              - @resource.default_attributes.keys.each do |a|
                = f.input a

    - unless local_assigns[:readonly]
      .row
        = simple_form_submit(f)
